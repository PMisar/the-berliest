<!-- Show all curated places in a list -->
<div class="places-list">
  <h2>Curated Places</h2>
  <input type="text" id="filter" placeholder="Filter places..." />
  <ul id="places">
    <!-- JavaScript will populate this list -->
  </ul>
</div>

<!-- Map to display selected places -->
<div id="map" style="height: 400px;"></div>

<!-- List of selected places -->
<div class="selected-places">
  <h2>Selected Places</h2>
  <ul id="selected-places">
    <!-- JavaScript will populate this list -->
  </ul>
</div>

<!-- Save list form -->
<div class="save-list">
  <h2>Save Your List</h2>
  <form id="saveListForm">
    <input type="text" id="listName" placeholder="Enter list name..." />
    <button type="submit">Save List</button>
  </form>
</div>