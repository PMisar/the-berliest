<!-- Show all curated places in a list -->
<div class="container-fluid">
  <div class="row">
    <!-- Dropdown menu on the left side -->
    <div>
      <form id="selectCat" action="/create-list?{{selectedCategory}}" method="get">
        <label for="category">Select Category:</label>
        <select id="category" class="form-control" name="category" onchange='if(this.value != 0) { this.form.submit(); }'>
          {{# if category}}
          <option value={{category}} selected >{{category}}</option>
          {{/if}}
          {{#each allCategories}}
          <option value={{this}}>{{this}}</option>
          {{/each}}
        </select>
      </form>
