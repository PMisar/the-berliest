<!-- Show all curated places in a list -->
<div class="container-fluid">
  <div class="row">
    <!-- Dropdown menu on the left side -->
    <div class="col-md-6">
      <label for="categorySelect">Select Category:</label>
      <select id="categorySelect" class="form-control">
        <option value="all">All Places</option>
        <option value="tourist">Like a real tourist</option>
        <option value="museum">Museum</option>
        <option value="breluncoffee">Fr√ºhstuck all day</option>
        <option value="restaurant">Taste Explorer</option>
        <option value="bar">Sip & Socialize</option>
        <option value="park">A day at the park</option>
        <option value="club">Endless dancing</option>
        <option value="shop">Shop till you drop</option>
        <option value="party">Where is a party at tonight?</option>
      </select>

      <h3>Selected Places</h3>
      <ul id="selectedPlaces" class="list-group">
        <!-- Selected places will be added dynamically here -->
      </ul>
    </div>
    <!-- Map on the right side -->
    <div class="col-md-6">
      <div id="map"></div>
    </div>
  </div>
</div>
<ul id="selectedPlaces" class="list-group">
  <!-- Handlebars will dynamically populate this list -->
</ul>

<form action="">
  {{value}}
  <div class="container mt-3">

    <div class="dropdown">
      <button
        type="submit"
        class="btn btn-dark dropdown-toggle"
        data-toggle="dropdown"
      >
        Search
      </button>
      <div class="dropdown-menu">
        <a class="dropdown-item" href="#">Breluncoffee</a>
        <a class="dropdown-item" href="#">Bar</a>
        <a class="dropdown-item" href="#">Shop</a>
        <a class="dropdown-item" href="#">Exhibition</a>
        <a class="dropdown-item" href="#">Restaurant</a>
        <a class="dropdown-item" href="#">Tourist</a>
        <a class="dropdown-item" href="#">Museum</a>
        <a class="dropdown-item" href="#">Park</a>
      </div>
    </div>
  </div>
</form>

<script>
  // Function to filter and update the places list based on the selected
  category function updatePlacesList() { const selectedCategory =
  document.getElementById("categorySelect").value; const places =
  document.querySelectorAll('.places-list .place'); places.forEach(place => {
  const category = place.querySelector('.category').textContent.trim(); // Show
  or hide the place based on the selected category if (selectedCategory ===
  'all' || category === selectedCategory) { place.classList.remove('hidden'); }
  else { place.classList.add('hidden'); } }); } // Event listener for the
  category dropdown change
  document.getElementById("categorySelect").addEventListener("change",
  updatePlacesList); // ... (your existing code) ...
</script>

<ul class="places-list">
  {{#each places}}
    <li class="place">
      Place:
      {{this.name}}
      Category:
      <span class="category">{{this.category}}</span>
      <form action="/add-to-list" method="post">
        <button type="submit">Add</button>
        <input type="hidden" name="name" value={{this.name}} />
      </form>
    </li>
  {{/each}}
</ul>

