<div class="col-md-4">
      <form id="selectCat" action="/select-category?{{selectedCategory}}" method="get">
    <label for="categorySelect">Select Category:</label>
    <select id="categorySelect" class="form-control" name="selectedCategory">
        <option disabled selected hidden>Click Me...</option>
        <option value="all">All</option>
        <option value="breluncoffee">Breluncoffee</option>
        <option value="bar">Bar</option>
        <option value="shop">Shop</option>
        <option value="exhibition">Exhibition</option>
        <option value="restaurant">Restaurant</option>
        <option value="tourist">Tourist</option>
        <option value="museum">Museum</option>
        <option value="park">Park</option>
    </select>
  </form>
  </div>

<div class ="row">
<div class="col-md-4">
  <h2>Pick all your places</h2>
<p>Click on the place to <strong>add</strong> them to your favorites</p>
  <ul class="places-list">
{{#if foundPlaces}}
 {{#each foundPlaces}}
     <form action="/add-to-list" method="post">
        <button type="submit" class="btn btn-dark"><li>{{name}}</li></button>
        <input type="hidden" name="name" value="{{name}}" />
      </form>
      {{/each}}
{{else}}
    {{#each places}}
      <li class="place">
        <form action="/add-to-list" method="post">
        <input type="hidden" name="name" value="{{this.name}}" />
          <button type="submit" class="btn btn-dark">
        {{this.name}}</button>
        </form>
        </li>
    {{/each}}

    {{/if}}
  </ul>
</p>
</div>
<div class="col-md-4">
<h2>{{username}}'s' Berliest places</h2>
<p>Click on the place to <strong>remove</strong> them from your Berliest</p>
<ul class="favorites-list">


  {{#each favorites}}
    
      <form action="/remove-from-list" method="post">
        <button type="submit" class="btn btn-dark"><li>{{this}}</li></button>
        <input type="hidden" name="name" value="{{this}}" />

      </form>

    
  {{/each}} 
</ul>

<!-- Save list form -->
<div class="saveListFormContainer">
  <h2>Save Your List</h2>
  <form action="/create-list/save-list" method="POST" id="saveListForm">
    <input
      type="text"
      id="listName"
      name="listName"
      placeholder="Enter list name..."
    />
    <button type="submit">Save List</button>
  </form>
</div>
</div>
</div>

<script>
  // Get the select element
  const selectElement = document.getElementById('categorySelect');
  // Add change event listener to the select element
  selectElement.addEventListener('change', function(event) {
    // Submit the form when an option is selected
    document.getElementById('selectCat').submit();
  });
</script>